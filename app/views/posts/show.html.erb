<h2><%= @post.title %></h2>
<p><%= simple_format @post.body %></p>
<% if @post.comments.any? %>
<ul>
  <% @post.comments.each do | comment |  %>
  <li>
    <%= comment.body %>
    <%= link_to '[x]',
      post_comment_path(@post, comment),
      method: :delete,
      class: 'command',
      data: { confirm: 'Sure?'}
     %>
  </li>
  <% end %>
</ul>
<% end %>
<h3>Comments</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.text_field :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
